{
  "name": "applenotes",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "npm run lint && npm run typecheck && npm run format:check",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run build && npm run analyze",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:screenshot": "playwright test tests/screenshot-comparison.spec.ts",
    "test:screenshot:update": "playwright test tests/screenshot-comparison.spec.ts --update-snapshots",
    "test:screenshot:debug": "playwright test tests/screenshot-comparison.spec.ts --debug",
    "playwright:install": "playwright install",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:screenshot": "playwright test tests/screenshot.spec.ts",
    "test:screenshot:update": "playwright test tests/screenshot.spec.ts --update-snapshots",
    "test:screenshot:headed": "playwright test tests/screenshot.spec.ts --headed",
    "test:screenshot:debug": "playwright test tests/screenshot.spec.ts --debug",
    "test:visual": "playwright test tests/image-comparison.spec.ts",
    "test:visual:all": "playwright test tests/screenshot.spec.ts tests/image-comparison.spec.ts",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps"
  },
